            </div>
            <div class="form-group">
                <label asp-for="TimeSheetEntries.Job" class="control-label"></label>
                <select asp-for="TimeSheetEntries.Job" asp-items="Model.Jobs">
                    <option value=""></option>
                </select>
                <span asp-validation-for="TimeSheetEntries.Job" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
